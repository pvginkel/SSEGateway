{
  "name": "ssegateway",
  "version": "1.0.0",
  "description": "SSEGateway - Server-Sent Events sidecar service for Python backend",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "tsc",
    "start": "node dist/index.js",
